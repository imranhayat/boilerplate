<div class="page-center">
  <div class="container-fluid px-0 bg-white h-100">
    <div class="row no-gutters h-100 align-items-center justify-content-center">
      <div class="col-lg-6">
        <div class="w-470 px-3 px-sm-0 py-4 mx-auto">
          <a href="/" class="d-block text-center">
            <img src="/logo.svg" width="205" height="24" alt="YourAppName Logo">
          </a>
          <h3 class="text-center my-4"><%= t "devise.invitations.edit.header" %></h3>
          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :invitation_token, readonly: true %>
              <% if f.object.class.require_password_on_accepting %>
                <div class="form-group form-floating">
                  <%= f.text_field :first_name, placeholder: 'Enter Your First Name', required: true %>
                  <label for="user_name">Enter Your First Name</label>
                </div>
                <div class="form-group form-floating">
                  <%= f.text_field :last_name, placeholder: 'Enter Your Last Name', required: true %>
                  <label for="user_name">Enter Your Last Name</label>
                </div>
                <div class="form-group form-floating">
                  <%= f.password_field :password, placeholder: 'Enter Your Password', required: true %>
                  <label for="user_password">Enter Your Password</label>
                </div>
                <div class="form-group form-floating">
                  <%= f.password_field :password_confirmation, placeholder: 'Confirm Your Password', required: true %>
                  <label for="user_password_confirmation">Confirm Your Password</label>
                </div>
              <% end %>
            <%= f.submit t("devise.invitations.edit.submit_button"), class:'btn-submit' %>
          <% end %>
          <div class="text-center mt-3">
            <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block devise-bg">
      </div>
    </div>
  </div>
</div>