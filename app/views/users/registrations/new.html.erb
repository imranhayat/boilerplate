<div class="page-center">
  <div class="container-fluid px-0 bg-white h-100">
    <div class="row no-gutters h-100 align-items-center justify-content-center">
      <div class="col-lg-6">
        <div class="w-470 px-3 px-sm-0 py-4 mx-auto">
          <a href="/" class="d-block text-center">
            <img src="/logo.svg" width="205" height="24" alt="YourAppName Logo">
          </a>
          <h3 class="text-center my-4">Sign Up to YourAppName</h3>
          <div class="form-row mb-3">
            <div class="col-sm mb-2 mb-sm-0">
              <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn-facebook">
                <span class="devise-social-icons"><img src="/facebook-icon.png" alt="Facebook Icon" width="24" height="24"></span>
                <span class="devise-social-text">Sign Up with Facebook</span>
              </a>
            </div>
            <div class="col-sm">
              <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn-google" >
                <span class="devise-social-icons"><img src="/google-icon.png" alt="Google Icon" width="18" height="18"></span>
                <span class="devise-social-text">Sign Up with Google</span>
              </a>
            </div>
          </div>
          <div class="row align-items-center no-gutters my-2">
            <div class="col-5">
              <hr/>
            </div>
            <div class="col-2 text-center">
              OR
            </div>
            <div class="col-5">
              <hr/>
            </div>
          </div>
          <% if session['devise.facebook_data'].present? %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group form-floating">
                <%= f.email_field :email, placeholder: "Enter Your Email" %>
                <label for="user_email">Enter Your Email</label>
              </div>
              <%= f.submit "Sign up", class:'btn-submit' %>
            <% end %>
          <% else %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-row row-cols-sm-2 row-cols-1">
                <div class="form-group form-floating col">
                  <%= f.text_field :first_name, required: true, placeholder: 'Enter Your First Name' %>
                  <label for="user_first_name">Enter Your First Name</label>
                </div>
                <div class="form-group form-floating col">
                  <%= f.text_field :last_name, required: true, placeholder: 'Enter Your Last Name' %>
                  <label for="user_last_name">Enter Your Last Name</label>
                </div>
              </div>
              <div class="form-group form-floating">
                <%= f.email_field :email, placeholder: 'Enter Your Email', required: true %>
                <label for="user_email">Enter Your Email</label>
              </div>
              <div class="form-group form-floating">
                <%= f.password_field :password, required: true, placeholder: 'Enter Your Password', minlength: 6 %>
                <label for="user_password">Enter Your Password</label>
              </div>
              <div class="form-group form-floating">
                <%= f.password_field :password_confirmation, required: true, placeholder: 'Enter Your Password Again', minlength: 6 %>
                <label for="user_password_confirmation">Enter Your Password Again</label>
              </div>
              <%= f.submit "Sign Up", class:'btn-submit' %>
            <% end %>
          <% end %>
          <div class="text-center mt-3">
            <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block devise-bg">
      </div>
    </div>
  </div>
</div>