<div class="page-center">
  <div class="card w-470">
    <div class="card-body">
      <h3 class="text-center">Settings</h3>
      <hr/>
      <% if current_user.provider.present? %>
        <span class="mark text-center">You cannot update your email or password here. To update your account, update it from your login source (<%= (current_user.provider == 'google_oauth2') ? 'Google' : 'Facebook' %>)</span>
      <% else %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "profile_form", method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group form-floating">
            <%= f.email_field :email,placeholder: 'Enter Your Email', required: true %>
            <label for="user_email">Enter Your Email</label>
          </div>
          <div class="form-group form-floating">
            <%= f.password_field :password, placeholder: 'Enter Your New Password', minlength: 6 %>
            <label for="user_password">Enter Your New Password</label>
          </div>
          <div class="form-group form-floating">
            <%= f.password_field :password_confirmation, placeholder: 'Confirm Your New Password', minlength: 6 %>
            <label for="user_password_confirmation">Confirm Your New Password</label>
          </div>
          <div class="form-group form-floating">
            <%= f.password_field :current_password, placeholder: 'Enter Your  Current Password', required: true, minlength: 6 %>
            <label for="user_current_password">Enter Your  Current Password</label>
          </div>
          <%= f.submit "Update", class:'btn-submit' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>