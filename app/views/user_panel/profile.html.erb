<div class="page-center">
  <div class="container-lg px-0 px-sm-3">
    <div class="shadow-sm bg-white">
      <div class="row no-gutters border">
        <div class="col-auto">
          <% if current_user.profile_pic.present? %>
            <img src="<%= current_user.profile_pic %>" class="img-fluid img-user" alt="Profile Pic">
          <% else %>
            <div class="first-letter profile">
              <% if current_user.name.present? %>
                <%= current_user.name.first %>
              <% else %>
                <%= current_user.email.first %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col p-3 p-lg-4 col-profile">
          <h2>
            <% if current_user.name.present? %>
              <%= current_user.name %>
            <% else %>
              <%= current_user.email %>
            <% end %>
          </h2>
          <a href="<%= edit_profile_path %>" class="btn btn-primary mt-2">Edit Profile</a>
        </div>
      </div>
      <div class="py-4 py-md-5 px-3 px-md-4 border border-top-0">
        <div class="form-row align-items-center justify-content-center mb-3 mb-md-4">
          <div class="col-sm-auto text-center mb-3 mb-sm-0">
            <h3>Information</h3>
          </div>
          <div class="col-auto ml-sm-auto">
            <h3 class="d-inline-block ml-auto">Your Balance: <span class="text-primary"><%= humanized_money_with_symbol(current_user.balance) %></span></h3>
          </div>
          <div class="col-auto">
            <a href="<%= top_up_path %>" class="btn btn-primary">Top Up</a>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6 mb-3 mb-md-4">
            <div class="px-3 py-2 border justify-content-between d-flex rounded-sm">
              <span class="font-weight-bold">Name:</span><%= current_user.name %>
            </div>
          </div>
          <div class="col-sm-6 mb-3 mb-md-4">
            <div class="px-3 py-2 border justify-content-between d-flex rounded-sm">
              <span class="font-weight-bold">Email:</span><%= current_user.email %>
            </div>
          </div>
          <div class="col-sm-6 mb-3 mb-sm-0">
            <div class="px-3 py-2 border justify-content-between d-flex rounded-sm">
              <span class="font-weight-bold">Gender:</span><%= current_user.gender || "Not Provided" %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="px-3 py-2 border justify-content-between d-flex rounded-sm">
              <span class="font-weight-bold">Date of Birth:</span><%= current_user&.date_of_birth&.strftime('%d/%B/%Y') || "Not Provided" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>